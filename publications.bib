author = {Feng, Xiaoming and Fu, Bojie and Zhang, Yuan and Pan, Naiqing and Zeng, Zhenzhong and Tian, Hanqin and Lyu, Yihe and Chen, Yongzhe and Ciais, Philippe and Wang, Yingping and Zhang, Lu and Cheng, Lei and Maestre, Fernando T. and Fern{\'{a}}ndez-Mart{\'{i}}nez, Marcos and Sardans, Jordi and Pe{\~{n}}uelas, Josep},
