keywords = {cell,elemental composition,morphology,moss,stoichiometry,traits},
month = {jul},
number = {8},
pages = {1581},
title = {{Do Bryophyte Elemental Concentrations Explain Their Morphological Traits?}},
url = {https://www.mdpi.com/2223-7747/10/8/1581},
